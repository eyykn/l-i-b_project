		script(src= '../../login.js')
		div#main
			h1 Look Inna Book Create Account
			br
			br
			h2 Customer Email:
				input(type="textbox" id="email")
			h2 Customer Password:
				input(type="textbox" id="pass")
			h2 Customer Name:
				input(type="textbox" id="name")
			h2 Customer Address:
				input(type="textbox" id="addr")
			h2 Customer Phone Num:
				input(type="textbox" id="num")
